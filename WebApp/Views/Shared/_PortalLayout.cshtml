<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        @(string.IsNullOrEmpty(ViewData["Title"] as string) ? "Alpha" : ViewData["Title"] + " - Alpha")
    </title>

    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/Tags.js" asp-append-version="true"></script>
</head>
<body>

    <div class="portal">
        
        <div class="logotype">
            @await Html.PartialAsync("Partials/Components/_Logotype")
        </div>

        <header class="top-menu">
            @await Component.InvokeAsync("Topbar")
        </header>

        <aside class="side-menu">
            @await Html.PartialAsync("Partials/Components/_NavLinks")
        </aside>
        
        <div class="main">
            @RenderBody()
        </div>
        
    </div>

    <form id="antiForgeryTokenForm" style="display: none;">
        @Html.AntiForgeryToken()
    </form>

    <partial name="Partials/Components/_CookieConsentForm" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js" integrity="sha512-7SRCYIJtR6F8ocwW7UxW6wGKqbSyqREDbfCORCbGLatU0iugBLwyOXpzhkPyHIFdBO0K2VCu57fvP2Twgx1o2A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Notification.js"></script>
    <script src="~/js/CookieConsent.js"></script>
    <script>
        window.appConfig = {
          isAuthenticated: @(
            (User?.Identity?.IsAuthenticated ?? false)
              .ToString()
              .ToLowerInvariant()
          )
        };
    </script>
    <script src="~/js/Darkmode.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

