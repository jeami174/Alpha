@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="center-screen">
    <div class="surface denied-box">
        <h1 class="form-header text-red">🚫 Access Denied</h1>
        <p>You do not have permission to access this page.</p>

        <div class="mt-4">
            <a class="btn btn-blue btn-denied" asp-action="Index" asp-controller="Admin">Return to Dashboard</a>
        </div>

        <div class="mt-3">
            <a class="btn btn-gray btn-denied" asp-action="AdminLogin" asp-controller="Auth">Log in as Admin</a>
        </div>
    </div>
</div>