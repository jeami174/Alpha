@model SignInFormModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Sign in";
}

<div class="center-screen">
    <div class="surface">
        <h1 class="form-header signin-title">Login</h1>

        

        <form class="form signin-form form extended-validation" method="post" asp-action="SignIn" asp-controller="Auth" novalidate>

            <!-- Google login -->
            <button class="btn btn-gray google-btn" type="button">
                <img src="~/images/Icons/google-icon.svg" alt="Google logo" class="google-icon" />
                Login with Google
                </button>

            <div class="SignIn-Divider">
                <hr />
                <span>OR</span>
                <hr />
            </div>

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" data-val="false" autocomplete="off" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="field-group">
                    <input asp-for="Password" data-val="false" autocomplete="off" id="passwordField" />
                    <span id="togglePassword" class="toggle-password">
                        <img src="~/images/Icons/Hide.svg" alt="Toggle Password" class="toggle-icon" />
                    </span>
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <!-- Remember Me -->
            <div class="form-options">
                <div class="remember">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe">Remember Me</label>
                </div>
                <div class="forgot">
                    <a href="#">Forgot Password?</a>
                </div>
            </div>

            <div class="form-message"></div>
            <!-- Submit -->
            <button type="submit" class="btn btn-blue">Log In</button>

            
        </form>

        <!-- Footer -->
        <div class="SignIn-Footer">
            <p>Don't have an account? <a asp-action="SignUp" asp-controller="Auth">Sign Up</a></p>
        </div>
    </div>
</div>
