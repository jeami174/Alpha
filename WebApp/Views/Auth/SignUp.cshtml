@model SignUpFormModel
@{
    Layout = "_Layout";
}

<div class="center-screen">
    <div class="surface">
        <h1 class="form-header signup-title">Create Account</h1>

        <div class="scroll-container">
            <div class="inner-padding">

                

                <form class="form signup-form extended-validation" method="post" asp-action="SignUp" asp-controller="Auth" novalidate>

                    <!-- Google Sign up -->
                    <a href="@Url.Action("ExternalSignIn", "Auth", new { provider = "Google", returnUrl = "~/admin" })" class="btn btn-gray google-btn">
                        <img src="~/images/Icons/google-icon.svg" alt="Google logo" class="google-icon" />
                        Sign Up with Google
                    </a>

                    <div class="SignUp-Divider">
                        <hr />
                        <span>OR</span>
                        <hr />
                    </div>

                    <!-- Name Fields -->
                    <div class="form-group name-group">
                        <div class="name-field">
                            <label asp-for="FirstName"></label>
                            <div class="field-group">
                                <input asp-for="FirstName" />
                                <span asp-validation-for="FirstName"></span>
                            </div>
                        </div>
                        <div class="name-field">
                            <label asp-for="LastName"></label>
                            <div class="field-group">
                                <input asp-for="LastName" />
                                <span asp-validation-for="LastName"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <div class="field-group">
                            <input asp-for="Email" />
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <div class="field-group">
                            <div class="input-with-icon">
                            <input asp-for="Password" data-val="false" autocomplete="off" id="passwordField" />
                            <span id="togglePassword" class="toggle-password">
                                <img src="~/images/Icons/Hide.svg" alt="Toggle Password" class="toggle-icon" />
                            </span>
                            </div>
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>

                    <!-- Confirm -->
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <div class="field-group">
                            <div class="input-with-icon">
                            <input asp-for="ConfirmPassword" id="confirmPasswordField" />
                            <span id="toggleConfirmPassword" class="toggle-password">
                                <img src="~/images/Icons/Hide.svg" alt="Toggle Password" class="toggle-icon" />
                            </span>
                            </div>
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>

                    <!-- Terms -->
                    <div class="form-group">
                        <div class="field-group field-group-terms">
                            <input asp-for="AcceptTerms" type="checkbox" />
                            <label asp-for="AcceptTerms">
                                I accept the <a class="terms-link" href="#" onclick="return false;">Terms and Conditions</a>
                            </label>
                            <span asp-validation-for="AcceptTerms"></span>
                        </div>
                    </div>
                    <div class="form-message"></div>
                    <!-- Submit -->
                    <button type="submit" class="btn btn-blue">Create Account</button>
                    
                </form>

                <!-- Footer -->
                <div class="SignUp-Footer">
                    <p>
                        Already have an account?
                        <a asp-action="SignIn" asp-controller="Auth">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
